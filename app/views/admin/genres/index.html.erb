<%= form_with(model: @genre, url: admin_genres_path, class: 'form-group') do |f| %>
  <%= f.label :name, "ジャンル名", class: 'form-label' %>
  <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名', required: true %>
  <%= f.submit "新規登録", class: 'btn btn-success' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td> #link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success'</td>
      </tr>
    <% end %>
  </tbody>
</table>

