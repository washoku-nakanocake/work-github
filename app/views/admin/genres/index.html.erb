<div class="container mt-4">
  <div class="row">
    <div class="col-6">

      <div class="p-3 mb-4 bg-light">
        <h5 class="mb-0">ジャンル一覧・追加</h5>
      </div>


      <div class="p-3 mb-4 bg-light">
        <%= form_with(model: @genre, url: admin_genres_path, class: 'form-group') do |f| %>
          <div class="form-group">
            <%= f.label :name, "ジャンル名", class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名', required: true %>
          </div>
          <%= f.submit "新規登録", class: 'btn btn-success mt-2' %>
        <% end %>
      </div>

      <div class="mb-4">
        <table class="table table-borderless">
          <thead class="thead-light">
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr class="border-bottom">
                <td><%= genre.name %></td>
                <td>
                  <%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
