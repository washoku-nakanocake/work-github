<div class="container mt-4">
  <div class="row">
    <div class="col-6">

      <div class="p-3 mb-4">
        <h5 class="mb-0">ジャンル編集</h5>
      </div>

      <div class="p-3 mb-4">
        <%= form_with(model: @genre, url: admin_genre_path(@genre), method: :patch, local: true, html: {class: "form-inline"}) do |f| %>

          <%= f.label :name, "ジャンル名", class: "mr-2 mb-2" %>

          <%= f.text_field :name, class: "form-control mr-2 mb-2", placeholder: "ジャンル名", required: true %>

          <%= f.submit "変更を保存", class: "btn btn-success mb-2" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
