<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="mb-4 bg-light p-2 border d-inline-block">注文履歴詳細</h3>

      <div class="row">
        <div class="col-md-7 mb-4">
          <table class="table table-borderless table-sm">
            <tr>
              <th style="width: 30%;">購入者</th>
              <td>
                <%= link_to admin_customer_path(@order.customer_id) do %>
                  <%= @order.customer.last_name %> <%= @order.customer.first_name %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th>注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                〒<%= @order.postal_code %> <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td class="d-flex align-items-center">
                <%= form_with(model: @order, url: admin_order_path(@order.id), local: true, class: "d-flex align-items-center") do |f| %>
                  <%= f.select :status, @order.class.statuses.keys.map { |k| [ @order.class.statuses_i18n[k], k ] }, 
                               { selected: @order.status }, class: "form-control form-control-sm mr-2" %>
                  <%= f.submit "更新" , class: "btn btn-success btn-sm" %>
                <% end %>
              </td>
            </tr>
          </table>
        </div>

        <div class="col-md-5">
        </div>
      </div>
      
      <div class="row mt-4">
        
        <div class="col-md-8">
          <h4 class="mb-3">注文内容</h4>
          <table class="table table-bordered">
            <thead class="thead-light">
              <tr>
                <th style="width: 30%;">商品名</th>
                <th class="text-right">単価(税込)</th>
                <th class="text-right">数量</th>
                <th class="text-right">小計</th>
                <th style="width: 25%;">製作ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td class="text-right"><%= number_with_delimiter(order_detail.price) %></td>
                <td class="text-right"><%= order_detail.amount %></td>
                <td class="text-right"><%= number_with_delimiter(order_detail.amount * order_detail.price) %></td>
                <td>
                  <%= form_with(model: order_detail, url: admin_order_detail_path(order_detail.id), method: :patch, local: true, class: "d-flex align-items-center") do |f| %>
                    <%= f.select :making_status, order_detail.class.making_statuses.keys.map { |k| [ order_detail.class.making_statuses_i18n[k], k ] }, 
                                 { selected: order_detail.making_status }, class: "form-control form-control-sm mr-2" %>
                    <%= f.submit "更新" , class: "btn btn-success btn-sm" %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="col-md-4 mt-5">
          <table class="table table-sm table-borderless">
            <tr>
              <th class="text-right">商品合計</th>
              <td class="text-right"><%= number_with_delimiter(@order.total_payment) %>円</td>
            </tr>
            <tr>
              <th class="text-right">送料</th>
              <td class="text-right"><%= number_with_delimiter(@order.shipping_cost) %>円</td>
            </tr>
            <tr class="border-top border-dark">
              <th class="text-right font-weight-bold">請求金額合計</th>
              <td class="text-right font-weight-bold"><%= number_with_delimiter(@order.total_payment + @order.shipping_cost) %>円</td>
            </tr>
          </table>
        </div>
      </div>
      
    </div>
  </div>
</div>