<div class="auth-bg d-flex align-items-center justify-content-center min-vh-100">
  <div class="glass-card shadow-lg rounded-lg p-4 p-md-5" style="max-width: 420px; width: 100%;">
    <div class="text-center mb-4">
      <h2 class="mb-1 font-weight-bold">管理者ログイン</h2>
      <small class="text-muted">Nakano Cake Admin</small>
    </div>

    <%# Devise flash / エラーメッセージ %>
    <% if flash[:alert].present? %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>
    <% if resource.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-0" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "small text-muted" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-control form-control-lg glass-input", placeholder: "admin@example.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "small text-muted" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "form-control form-control-lg glass-input", placeholder: "••••••••" %>
      </div>

      <%= f.submit "ログイン", class: "btn btn-custom-blue btn-lg btn-block" %>
    <% end %>

    <div class="text-center mt-3">
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>