<h1>会員情報編集</h1>
<%# エラーがある場合 %>
<% if @customer.errors.any? %>
  <div class="errors">
    <p><strong><%= @customer.errors.count %></strong> 件のエラーがあります。</p>
    <ul><% @customer.errors.full_messages.each { |m| %><li><%= m %></li><% } %></ul>
  </div>
<% end %>

<%= form_with model: [:admin, @customer], local: true do |f| %>
  <fieldset>
    <legend>基本情報</legend>
    <div>
      <label>氏名</label>
      <div>
        <%= f.text_field :last_name,  placeholder: "姓" %>
        <%= f.text_field :first_name, placeholder: "名" %>
      </div>
    </div>

    <div>
      <label>フリガナ</label>
      <div>
        <%= f.text_field :last_name_kana,  placeholder: "セイ" %>
        <%= f.text_field :first_name_kana, placeholder: "メイ" %>
      </div>
    </div>

    <div><label>郵便番号</label><%= f.text_field :postal_code %></div>
    <div><label>住所</label><%= f.text_field :address %></div>
    <div><label>電話番号</label><%= f.text_field :telephone_number %></div>
    <div><label>メールアドレス</label><%= f.email_field :email %></div>
  </fieldset>

  <fieldset>
    <legend>会員ステータス</legend>
    <label><%= f.radio_button :is_active, true %> 有効</label>
    <label><%= f.radio_button :is_active, false %> 退会</label>
  </fieldset>

  <div>
    <%= f.submit "変更を保存" %>
    <%= link_to "詳細へ戻る", admin_customer_path(@customer) %>
  </div>
<% end %>