<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">会員情報編集</h1>
  </div>
  <%# エラーがある場合 %>
  <% if @customer.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= @customer.errors.count %></strong> 件のエラーがあります。
      <ul class="mb-0">
        <% @customer.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @customer], local: true do |f| %>
        <h5 class="mb-3">基本情報</h5>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label>氏名（姓）</label>
            <%= f.text_field :last_name, class: "form-control", placeholder: "姓" %>
          </div>
          <div class="form-group col-md-6">
            <label>氏名（名）</label>
            <%= f.text_field :first_name, class: "form-control", placeholder: "名" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label>フリガナ（セイ）</label>
            <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ" %>
          </div>
          <div class="form-group col-md-6">
            <label>フリガナ（メイ）</label>
            <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ" %>
          </div>
        </div>

        <div class="form-group">
          <label>郵便番号</label>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>電話番号</label>
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <h5 class="mt-4 mb-2">会員ステータス</h5>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_active, true, id: "customer_active_true", class: "form-check-input" %>
          <label class="form-check-label" for="customer_active_true">有効</label>
        </div>
        <div class="form-check form-check-inline mb-3">
          <%= f.radio_button :is_active, false, id: "customer_active_false", class: "form-check-input" %>
          <label class="form-check-label" for="customer_active_false">退会</label>
        </div>

        <div class="mt-3">
          <%= f.submit "変更を保存", class: "btn btn-primary mr-2" %>
          <%= link_to "詳細へ戻る", admin_customer_path(@customer), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
