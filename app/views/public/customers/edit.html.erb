<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>
  <div>
    <label>氏名</label>
    <div>(姓) <%= f.text_field :last_name %> (名) <%= f.text_field :first_name %></div>
  </div>
  <div>
    <label>フリガナ</label>
    <div>(セイ) <%= f.text_field :last_name_kana %> (メイ) <%= f.text_field :first_name_kana %></div>
  </div>
  <div><label>郵便番号</label><%= f.text_field :postal_code %></div>
  <div><label>住所</label><%= f.text_field :address %></div>
  <div><label>電話番号</label><%= f.text_field :telephone_number %></div>
  <div><label>メールアドレス</label><%= f.email_field :email %></div>

  <div>
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", customers_unsubscribe_path %>
  </div>
<% end %>