<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">会員情報編集</h1>
  </div>

  <% if @customer.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= @customer.errors.count %></strong> 件のエラーがあります。
      <ul class="mb-0">
        <% @customer.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <%= form_with model: @customer, url: customers_information_path, method: :patch, local: true do |f| %>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label>氏名（姓）</label>
            <%= f.text_field :last_name, class: "form-control", placeholder: "山田" %>
          </div>
          <div class="form-group col-md-6">
            <label>氏名（名）</label>
            <%= f.text_field :first_name, class: "form-control", placeholder: "花子" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label>フリガナ（セイ）</label>
            <%= f.text_field :last_name_kana, class: "form-control", placeholder: "ヤマダ" %>
          </div>
          <div class="form-group col-md-6">
            <label>フリガナ（メイ）</label>
            <%= f.text_field :first_name_kana, class: "form-control", placeholder: "ハナコ" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label>郵便番号</label>
            <%= f.text_field :postal_code, class: "form-control", placeholder: "0000000" %>
          </div>
          <div class="form-group col-md-6">
            <label>電話番号</label>
            <%= f.text_field :telephone_number, class: "form-control", placeholder: "0000000000" %>
          </div>
        </div>

        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.email_field :email, class: "form-control", placeholder: "sample@example.com" %>
        </div>

        <div class="d-flex mt-3 justify-content-between">
          <%= f.submit "編集内容を保存", class: "btn btn-primary mr-2" %>
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-outline-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
