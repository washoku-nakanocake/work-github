<h1>ショッピングカート</h1>

<% if @cart_items.present? %>
  <div>
    <%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete , data: { confirm: '全て削除してもよろしいですか？' } %>
  </div>
  <table> 
    <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price_without_tax * 1.1).floor %></td>
          <td>
            <%= form_with model: cart_item, method: :patch, local: true do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit '変更' %>
            <% end %>
          </td>
          <td><%= (cart_item.item.price_without_tax * 1.1).floor * cart_item.amount %></td>
          <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
          <% @total_payment +=  (cart_item.item.price_without_tax * 1.1).floor * cart_item.amount %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= link_to '買い物を続ける', items_path %>
  </div>
  
  <table>
    <tr>
      <td>合計金額</td>
      <td><%= @total_payment.to_s(:delimited) %></td>
    </tr>
  </table>

  <div>
    <%= link_to '情報入力に進む', new_order_path %>
  </div>
  
<% else %>
  <p>カートに商品はありません。</p>
<% end %>