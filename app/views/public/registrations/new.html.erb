<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">
      <h1 class="h3 mb-3">新規会員登録</h1>

      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |m| %>
              <li><%= m %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>氏名（姓）</label>
                <%= f.text_field :last_name, class: "form-control", placeholder: "山田" %>
              </div>
              <div class="form-group col-md-6">
                <label>氏名（名）</label>
                <%= f.text_field :first_name, class: "form-control", placeholder: "花子" %>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>フリガナ（セイ）</label>
                <%= f.text_field :last_name_kana, class: "form-control", placeholder: "ヤマダ" %>
              </div>
              <div class="form-group col-md-6">
                <label>フリガナ（メイ）</label>
                <%= f.text_field :first_name_kana, class: "form-control", placeholder: "ハナコ" %>
              </div>
            </div>

            <div class="form-group">
              <label>メールアドレス</label>
              <%= f.email_field :email, class: "form-control", placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>郵便番号(ハイフンなし)</label>
                <%= f.text_field :postal_code, class: "form-control", placeholder: "0000000" %>
              </div>
              <div class="form-group col-md-6">
                <label>電話番号(ハイフンなし)</label>
                <%= f.text_field :telephone_number, class: "form-control", placeholder: "0000000000" %>
              </div>
            </div>

            <div class="form-group">
              <label>住所</label>
              <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label>パスワード(6文字以上)</label>
                <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              </div>
              <div class="form-group col-md-6">
                <label>パスワード(確認用)</label>
                <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "新規登録", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <p class="mt-3">
        既に登録済みの方は
        <%= link_to "こちら", new_customer_session_path %>
        からログインしてください。
      </p>
    </div>
  </div>
</div>
