<div class="genre_search border p-2" style="max-width: 200px;">
  <table class="table table-borderless mb-0">
    <tr>
      <th>ジャンル検索</th>
    </tr>

    <%= form_with url: genre_search_result_items_path, method: :get do |f| %>
      <% genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, genre_search_result_items_path(genre_id: genre.id), method: :get %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
