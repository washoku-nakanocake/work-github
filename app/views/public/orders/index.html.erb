<div class="container my-4">
  <div class="row">
    <div class="col-md-12">
      
      <h3 class="mb-4 bg-light p-2 border d-inline-block">注文履歴一覧</h3>
      
      <table class="table table-bordered table-sm">
        
        <thead class="thead-light">
          <tr>
            <th style="width: 12%;">注文日</th>
            <th style="width: 35%;">配送先</th>
            <th style="width: 20%;">注文商品</th>
            <th style="width: 10%;">支払金額</th>
            <th style="width: 10%;">ステータス</th>
            <th style="width: 13%;">注文詳細</th>
          </tr>
        </thead>
        
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            
            <td>
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            
            <td class="text-right">
              <%= number_with_delimiter(order.total_payment + order.shipping_cost) %>円
            </td>
            
            <td><%= order.status_i18n %></td>
            
            <td>
              <%= link_to "表示する", order_path(order.id), class: "btn btn-primary btn-sm" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="d-flex justify-content-center">
        <%= paginate @orders %>
      </div>
      
    </div>
  </div>
</div>