<div class="container my-4">
  <div class="row">
    <div class="col-md-12">
      
      <h3 class="mb-4 bg-light p-2 border d-inline-block">注文履歴詳細</h3>

      <div class="row mb-5">
        
        <div class="col-md-7">
          <h4 class="mb-3">注文情報</h4>
          <table class="table table-bordered table-sm">
            <tr>
              <th class="bg-light" style="width: 30%;">注文日</th>
              <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th class="bg-light">配送先</th>
              <td>
                〒<%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
              </td>
            </tr>
            <tr>
              <th class="bg-light">支払方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th class="bg-light">ステータス</th>
              <td><%= @order.status_i18n %></td>
            </tr>
          </table>
        </div>

        <div class="col-md-5">
          <h4 class="mb-3">請求情報</h4>
          <table class="table table-bordered table-sm w-75">
            <tr>
              <th class="bg-light" style="width: 50%;">商品合計</th>
              <td class="text-right"><%= number_with_delimiter(@order.total_payment) %></td>
            </tr>
            <tr>
              <th class="bg-light">配送料</th>
              <td class="text-right"><%= number_with_delimiter(@order.shipping_cost) %></td>
            </tr>
            <tr>
              <th class="bg-light">ご請求額</th>
              <td class="text-right"><%= number_with_delimiter(@order.total_payment + @order.shipping_cost) %></td>
            </tr>
          </table>
        </div>
      </div>
      
      <h4 class="mt-4 mb-3">注文内容</h4>
      <div class="row">
        <div class="col-md-8">
          <table class="table table-bordered table-sm">
            <thead>
              <tr>
                <th style="width: 50%;" class="bg-light">商品</th>
                <th style="width: 15%;" class="bg-light">単価(税込)</th>
                <th style="width: 10%;" class="bg-light">個数</th>
                <th style="width: 25%;" class="bg-light">小計</th>
              </tr>
            </thead>
            <tbody>
              <% @order_details.each do |order_detail| %>
              <tr>
                <td><%= order_detail.item.name %></td>
                <td class="text-right"><%= number_with_delimiter(order_detail.price) %></td>
                <td class="text-right"><%= order_detail.amount %></td>
                <td class="text-right"><%= number_with_delimiter(order_detail.amount * order_detail.price) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <div class="col-md-4"></div>
      </div>
      
    </div>
  </div>
</div>