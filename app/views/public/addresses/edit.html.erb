<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">配送先編集</h1>
    <%= link_to "一覧へ戻る", addresses_path, class: "btn btn-outline-secondary" %>
  </div>

  <% if @address.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @address.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <%= form_with model: @address, url: address_path(@address), method: :patch, local: true do |f| %>

        <div class="form-row">
          <div class="form-group col-md-4">
            <label>郵便番号(ハイフンなし)</label>
            <%= f.text_field :postal_code, class: "form-control", placeholder: "0000000" %>
          </div>
          <div class="form-group col-md-8">
            <label>宛名</label>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <label>住所</label>
          <%= f.text_field :address, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>

        <div class="d-flex mt-2 justify-content-between">
          <%= f.submit "変更内容を保存", class: "btn btn-primary mr-2" %>
          <%= link_to "キャンセル", addresses_path, class: "btn btn-outline-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
